{#
/**
 * @file
 * Default theme implementation
 *
 * Available variables:
 *  - language_id : current language
 *
 * @see template_preprocess_ipu_tweaks()
 *
 * @ingroup themeable
 */
#}
<div class="ipu-tweaks-data-points">
    <h2 class="sr-only">{{ 'Data points'|t }}:</h2>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 card-members">
                    <div class="term-icon term-icon-19 card-header">
                        <span class="data-point-title">{{ 'IPU member parliaments'|t }}</span>
                    </div>
                    <div class="card-body d-flex flex-column stats">
                        <div class="d-flex align-items-center">
                            <div><div class="stats-circle">{{ stats.members.count }}</div></div>
                            <div class="stats-content">{{ 'countries are members of the IPU'|t }}</div>
                        </div>
                        <div class="mt-auto"><a class="stats-more-link" href="{{ stats.members.link  }}">{{ 'See our member parliaments'|t }}</a></div>
                    </div>
                </div>
            </div>
            {% if stats.women is not same as(null) %}
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 card-current-women-percent">
                    <div class="term-icon term-icon-88 card-header">
                        <span class="data-point-title">{{ language_id == 'fr' ? 'Femmes dans les parlements' : stats.women.title}}</span>
                    </div>
                    <div class="card-body d-flex flex-column stats">
                        <div class="d-flex">
                            <div style="width: {{ stats.women.percent }}%" class="stats-item stats-women"></div>
                            <div style="width: {{ 100 - stats.women.percent }}%" class="stats-item stats-men"></div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="stats-number">{{ stats.women.percent }}%</div>
                            <div class="stats-content"> {{ stats.women.description }}</div>
                        </div>
                        <div class="mt-auto"><a class="stats-more-link" href="{{ stats.women.link }}">{{ stats.women.link_text }}</a></div>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if stats.under45 is not same as(null) %}
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 card-under-45-percent">
                    <div class="term-icon term-icon-117 card-header">
                        <span class="data-point-title">{{ stats.under45.title }}</span>
                    </div>
                    <div class="card-body d-flex flex-column stats">
                        <div class="d-flex stats-age">
                            <div style="width: {{ stats.under45.percent }}%" class="stats-item stats-under-45"></div>
                            <div style="width: {{ 100 - stats.under45.percent }}%" class="stats-item stats-not-under-45"></div>
                        </div>
                        <div class="d-flex  align-items-center">
                            <div class="stats-number">{{ stats.under45.percent }}%</div>
                            <div class="stats-content">{{ stats.under45.description }}</div>
                        </div>
                        <div class="mt-auto"><a class="stats-more-link" href="{{ stats.under45.link }}">{{ stats.under45.link_text }}</a></div>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if stats.humanrights is not same as(null) %}
            <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="term-icon term-icon-82 card-header">
                        <span class="data-point-title">{{ stats.humanrights.title }}</span>
                    </div>
                    <div class="card-body d-flex flex-column stats">
                        <div class="d-flex align-items-center">
                            <div><div class="stats-circle">{{ stats.humanrights.count }}</div></div>
                            <div class="stats-content">{{ stats.humanrights.description }}</div>
                        </div>
                        <div class="mt-auto"><a class="stats-more-link" href="{{ stats.humanrights.link }}">{{ stats.humanrights.link_text }}</a></div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
        {#% endfor %#}
    </div>
</div>
