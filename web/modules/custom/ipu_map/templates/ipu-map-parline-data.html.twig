{#
/**
 * @file
 * Default theme implementation
 *
 * Available variables:
 *  - language_id : current language
 *
 * @see template_preprocess_ipu_map()
 *
 * @ingroup themeable
 */
#}
<div class="ipu-map-parline-data mb-5">
    <h2 class="sr-only">{{ 'Data points'|t }} :</h2>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="data-parliament-name">{{ parliamentary_name|join(', ') }}</div>
                <p>{{ 'The IPU data corresponds to the lower chamber if the parliament is bicameral. For information about upper chambers, refer to <a href="https://data.ipu.org">Parline</a>'|t }}</p>
                <!--p>{{ description }}</p-->
            </div>
            {% if current_women_percent is not same as(null) %}
            <div class="col-md-3">
                <div class="card h-100 card-current-women-percent">
                    <div class="term-icon term-icon-88 card-header">
                        <span class="data-point-title">{{ 'Women in parliament'|t }}</span>
                    </div>
                    <div class="card-body d-flex flex-column stats">
                        <div class="d-flex">
                            <div style="width: {{ current_women_percent }}%" class="stats-item stats-women"></div>
                            <div style="width: {{ 100 - current_women_percent }}%" class="stats-item stats-men"></div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="stats-number">{{ current_women_percent }}%</div>
                            <div class="stats-content"> {{ 'of MPs are women'|t }} </div>
                        </div>
                        <div class="mt-auto"><a class="stats-more-link" href="{{ ipu_map_gender_link }}">{{ 'IPU on gender equality'|t }}</a></div>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if total_younger_45_percentage is not same as(null) %}
            <div class="col-md-3">
                <div class="card h-100 card-under-45-percent">
                    <div class="term-icon term-icon-117 card-header">
                        <span class="data-point-title">{{ 'Youth in parliament'|t }}</span>
                    </div>
                    <div class="card-body d-flex flex-column stats">
                        <div class="d-flex stats-age">
                            <div style="width: {{ total_younger_45_percentage }}%" class="stats-item stats-under-45"></div>
                            <div style="width: {{ 100 - total_younger_45_percentage }}%" class="stats-item stats-not-under-45"></div>
                        </div>
                        <div class="d-flex  align-items-center">
                            <div class="stats-number">{{ total_younger_45_percentage }}% </div>
                            <div class="stats-content"> {{ 'of MPs are under 45'|t }}</div>
                        </div>
                        <div class="mt-auto"><a class="stats-more-link" href="{{ ipu_map_youth_link }}">{{ 'IPU on youth empowerment'|t }}</a></div>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if human_rights_cases is not same as(null) %}
            <div class="col-md-3">
                <div class="card h-100">
                    <div class="term-icon term-icon-82 card-header">
                        <span class="data-point-title">{{ 'MPs\' human rights'|t }}</span>
                    </div>
                    <div class="card-body d-flex flex-column stats">
                        <div class="d-flex align-items-center">
                            <div><div class="stats-circle">{{ human_rights_cases }}</div></div>
                            <div class="stats-content">{{ 'cases currently treated by the Committee on the Human Rights of MPs'|t }}</div>
                        </div>
                        <div class="mt-auto"><a class="stats-more-link" href="{{ ipu_map_hr_link }}">{{ 'Report an MP in danger'|t }}</a></div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
        {#% endfor %#}
    </div>
</div>
