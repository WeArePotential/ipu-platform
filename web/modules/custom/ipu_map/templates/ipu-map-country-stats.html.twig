{#
/**
 * @file
 * Default theme implementation
 *
 * Available variables:
 *
 * @see template_preprocess_ipu_map()
 *
 * @ingroup themeable
 */
#}

<div class="ipu-map-parline-data">
    <ul class="list-unstyled">
        {#<li>{{ dump(_context) }}</li>#}
        <li class="d-flex justify-content-between ipu-border-bottom">
            <span class="stats-title">{{ 'Population'|t }}</span>
            <span class="stats-content">{{ population_in_millions }}
                {{ 'million people'|t }}</span>
        </li>
        <li class="d-flex justify-content-between ipu-border-bottom">
            <span class="stats-title">{{ 'Number of MPs'|t }}</span>
            <span class="stats-content">{{ members_per_country }}
                MPs</span>
        </li>
        <li class="d-flex justify-content-between ipu-border-bottom">
            <span class="stats-title">{{ 'Legislature'|t }}</span>
            <span class="stats-content">{{ structure_of_parliament }}</span>
        </li>

        <li class="d-flex justify-content-between ipu-border-bottom">
            <span class="stats-title">{{ 'Last election'|t }}</span>
            <span class="stats-content">{{ last_election_date }}</span>
        </li>
        <li class="d-flex justify-content-between ipu-border-bottom">
            <span class="stats-title">{{ 'IPU Membership'|t }}</span>
            {% if membership_status %}
                <span class="fa fa-check text-primary" title="{{ membership_status_text }}">
                </span>
            {% else %}
                <span class="fa fa-times text-primary" title="{{ membership_status_text }}">
                </span>
            {% endif %}
        </li>
        <li class="d-flex justify-content-between ipu-border-bottom">
            <span class="stats-title">{{ 'Common principles signatory'|t }}</span>
            {% if principles_signatory %}
                <span class="fa fa-check text-primary" title="{{ principles_signatory_text }}">
                </span>
            {% else %}
                <span class="fa fa-times text-primary" title="{{ principles_signatory_text }}">
                </span>
            {% endif %}
        </li>
        <li class="d-flex justify-content-between ipu-border-bottom">
            <span class="stats-title">{{ 'Website'|t }}</span>
            <span class="stats-content">{{ website_link|join('<br />')|raw }}</span>
        </li>

        <li>
            <a class="more-data-parline" href="{{ url }}"><span class="fas fa-chart-pie"></span>{{ 'More data from Parline'|t }}</a>
        </li>
    </ul>
  {% if data_provenance is not same as(null) %}
    <div class="data-provenance">
      {{ data_provenance }}
    </div>
  {% endif %}
  {% if hub_link is not same as(null) %}
    <div class="hub-link">
      <h3 style="border-bottom: 2px solid #f0ad4e;">{{  'Innovation host'|t }}</h3>
      {{ hub_link }}
    </div>
  {% endif %}
</div>
